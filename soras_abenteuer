	static void Casinoger√§t()
    {
        int budget = 500;
        Random rand = new Random();
        int kosten = 1;

        while (true)
        {
            Console.WriteLine("Geben Sie 1 zum Spielen und 2 zum Beenden ein");
            int casinoauswahl = Convert.ToInt32(Console.ReadLine());

            switch (casinoauswahl)
            {
                case 1:
                    budget -= kosten;
                    int randNum1 = rand.Next(1, 4);
                    Console.WriteLine("Erste Zahl: " + randNum1);
                    int randNum2 = rand.Next(1, 4);
                    Console.WriteLine("Zweite Zahl: " + randNum2);
                    int randNum3 = rand.Next(1, 4);
                    Console.WriteLine("Dritte Zahl: " + randNum3);

                    Console.WriteLine("Sie haben nur noch: " + budget + " zur Verf√ºgung");

                    if (randNum1 == randNum2 && randNum3 == randNum1)
                    {
                        budget += 5;
                        Console.WriteLine("Gl√ºckwunsch, Sie haben 5‚Ç¨ gewonnen. Sie haben noch " + budget + " zur Verf√ºgung.");
                    }
                    else
                    {
                        Console.WriteLine("Leider eine Niete!");
                    }
                    break;

                case 2:
                    Console.WriteLine("Spiel beendet. Sie haben noch " + budget + " zur Verf√ºgung.");
                    return; 

                default:
                    Console.WriteLine("Ung√ºltige Eingabe. Bitte geben Sie 1 zum Spielen oder 2 zum Beenden ein.");
                    break;
            }
        }
    }

